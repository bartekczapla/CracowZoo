<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CracowZoo.Views.AnimalGroupsPage"
             Title="{Binding Title}">
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>

            <ImageButton 
                Source="ryby.jpg" 
                Aspect="Fill"
                Command="{Binding ExecuteNavigate}" 
                CommandParameter="1"  
                Grid.Row="0"
                >
            </ImageButton>
            <ImageButton 
                Source="plazy.jpg" 
                Aspect="Fill"
                Command="{Binding ExecuteNavigate}" 
                CommandParameter="2"  
                Grid.Row="1" 
                >
            </ImageButton>
            <ImageButton 
                Source="gady.jpg" 
                Aspect="Fill"
                Command="{Binding ExecuteNavigate}" 
                CommandParameter="3"
                Grid.Row="2"  >
            </ImageButton>
            <ImageButton
                Source="ptaki.jpeg" 
                Aspect="Fill"
                Command="{Binding ExecuteNavigate}" 
                CommandParameter="4"
                Grid.Row="3" >
            </ImageButton>
            <ImageButton 
                Source="ssaki.jpg" 
                Aspect="Fill"
                Command="{Binding ExecuteNavigate}"      
                Grid.Row="4" 
                CommandParameter="5" 
                    >
            </ImageButton>
        </Grid>
    </ScrollView>
</ContentPage>