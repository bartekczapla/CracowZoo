<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CracowZoo.Views.AnimalGroupsPage"
             Title="{Binding Title}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>

        <Button Text="Wszystkie" Command="{Binding ExecuteNavigate}" CommandParameter="-1" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontSize="Large" BackgroundColor="SandyBrown"/>
        <Button Text="Ryby" Command="{Binding ExecuteNavigate}" CommandParameter="1"  Grid.Row="1" Grid.Column="0" FontSize="Large" BackgroundColor="Aqua">
        </Button>
        <Button Text="Płazy" Command="{Binding ExecuteNavigate}" CommandParameter="2"  Grid.Row="1" Grid.Column="1" FontSize="Large" BackgroundColor="Red">
        </Button>
        <Button Text="Gady" Command="{Binding ExecuteNavigate}" CommandParameter="3"  Grid.Row="2" Grid.Column="0" FontSize="Large" BackgroundColor="Green" >
        </Button>
        <Button Text="Ptaki" Command="{Binding ExecuteNavigate}" CommandParameter="4"  Grid.Row="2" Grid.Column="1" FontSize="Large" BackgroundColor="Yellow">
        </Button>
        <Button Text="Ssaki" Command="{Binding ExecuteNavigate}" CommandParameter="5"  Grid.Row="3" Grid.Column="0" FontSize="Large" BackgroundColor="Gray">
        </Button>
    </Grid>

</ContentPage>