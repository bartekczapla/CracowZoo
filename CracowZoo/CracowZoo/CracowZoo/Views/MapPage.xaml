<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:CracowZoo.Views.CustomControls"
             xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
             x:Class="CracowZoo.Views.MapPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid>
            <controls:ZooMap x:Name="ZooMapControl" MapType="Street"/>
            <Button HeightRequest="40" WidthRequest="40" HorizontalOptions="Start" VerticalOptions="Start"
                    CornerRadius="20" Margin="10" BackgroundColor="White"
                    Command="{Binding MenuButton}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>